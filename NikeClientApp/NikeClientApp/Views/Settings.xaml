<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NikeClientApp.Views.Settings">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource ContainerBackgroundColor}">
            <Label Text="Welcome to Xamarin.Forms!"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" 
                   Style="{StaticResource TextColor}"/>
            <Button Text="Ändra mode" Command="{Binding SetAppThemeCommand}"></Button>
            <Button Text="ändra" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>